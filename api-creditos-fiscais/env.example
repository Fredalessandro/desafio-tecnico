# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================

# URL de conexão com o PostgreSQL
DATASOURCE_URL=jdbc:postgresql://localhost:5432/postgres

# Usuário do banco de dados
DATASOURCE_USERNAME=postgres

# Senha do banco de dados
DATASOURCE_PASSWORD=postgres

# ===========================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================================

# Perfil ativo (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# Porta da aplicação
SERVER_PORT=8080

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================

# Nível de log da aplicação
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_DESAFIO=DEBUG

# ===========================================
# CONFIGURAÇÕES DO FLYWAY
# ===========================================

# Habilitar Flyway
SPRING_FLYWAY_ENABLED=true

# Localização dos scripts de migração
SPRING_FLYWAY_LOCATIONS=classpath:db/migration

# ===========================================
# CONFIGURAÇÕES JPA/HIBERNATE
# ===========================================

# Mostrar SQL no console (apenas para desenvolvimento)
SPRING_JPA_SHOW_SQL=true

# Formatar SQL no console
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO (exemplo)
# ===========================================

# Para ambiente de produção, use configurações como:
# DATASOURCE_URL=jdbc:postgresql://prod-db-server:5432/creditos_prod
# DATASOURCE_USERNAME=prod_user
# DATASOURCE_PASSWORD=prod_secure_password
# SPRING_PROFILES_ACTIVE=prod
# SPRING_JPA_SHOW_SQL=false 